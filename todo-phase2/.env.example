# This is an example environment file for the Todo Full-Stack Web Application

# BACKEND CONFIGURATION
# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/todoapp

# Authentication Secret (for JWT tokens)
BETTER_AUTH_SECRET=your-super-secret-jwt-key-here

# Allowed Origins for CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Debug Mode
DEBUG=True


# FRONTEND CONFIGURATION
# API URL for frontend to communicate with backend
NEXT_PUBLIC_API_URL=http://localhost:8000

# Better Auth URL
NEXT_PUBLIC_BETTER_AUTH_URL=http://localhost:8000/auth